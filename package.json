    "date-fns": "^4.1.0",
    "leaflet": "^1.9.4",
    "plotly.js": "^3.3.0",
    "puppeteer": "^24.30.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-leaflet": "^5.0.0",
    "react-plotly.js": "^2.6.0",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
